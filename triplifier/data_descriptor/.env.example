# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here-please-change-for-production

# GraphDB Configuration
FLYOVER_GRAPHDB_URL=http://localhost:7200
FLYOVER_REPOSITORY_NAME=userRepo

# Application Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_TIMEOUT=300  # seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=true

# Example for Production:
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=use-a-strong-random-secret-key-here
# FLYOVER_GRAPHDB_URL=http://graphdb:7200
# FLYOVER_REPOSITORY_NAME=prodRepo